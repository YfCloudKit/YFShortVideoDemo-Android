<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yfcloud.shortvideo.activity.VideoRecordActivity">

    <com.yfcloud.shortvideo.widget.ScaleGLSurfaceView
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.yfcloud.shortvideo.widget.FocusLayout
        android:id="@+id/focus_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <include layout="@layout/layout_preview_menus"/>

    <include layout="@layout/layout_record_progress"/>

    <include layout="@layout/layout_record_button"/>

    <include layout="@layout/layout_cut_music"/>

    <include layout="@layout/layout_effect"/>

</FrameLayout>
