<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@android:color/black"
              >
    <com.yunfan.player.widget.YfPlayerKit
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right|bottom"
        />

    <FrameLayout
        android:id="@+id/preview_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.yfcloud.shortvideo.widget.YfController
            android:id="@+id/controller"
            android:layout_marginBottom="@dimen/dp_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"/>

        <Button
            android:id="@+id/start_pause"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@mipmap/icon_play"
            android:onClick="startPause"/>
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="20dp"
        android:text="复制播放地址"
        android:onClick="copyUrl"
        android:textColor="@color/effectBlue"
        android:textSize="@dimen/sp_14"
        android:gravity="center"
        android:background="@drawable/select_btn_bg"/>
</FrameLayout>